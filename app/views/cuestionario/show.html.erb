<div class="bg-gradient-cream min-h-screen text-dark leading-relaxed">
  <div class="max-w-4xl mx-auto p-4 md:p-8 bg-warm-white shadow-2xl rounded-3xl my-4 md:my-8 relative overflow-hidden border-2 border-cream">
    <!-- Subtle background decoration -->
    <div class="absolute top-0 right-0 w-64 h-64 bg-gradient-to-br from-coral-light/20 to-transparent rounded-full -translate-y-32 translate-x-32 pointer-events-none"></div>

    <div class="relative z-10">
      <!-- Header -->
      <div class="text-center mb-8 pb-6 border-b-2 border-green-light relative">
        <h1 class="text-5xl md:text-6xl font-bold text-coral mb-2 drop-shadow-sm">Descanso Consciente</h1>
        <h2 class="text-2xl md:text-3xl text-green mb-4 font-normal">CUESTIONARIO</h2>
        <div class="text-4xl">üå∏</div>
      </div>

      <!-- Flash alerts -->
      <% if flash[:alert] %>
        <div class="bg-coral-light border-2 border-coral text-white px-6 py-4 rounded-xl mb-6">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <!-- Progress section -->
      <div class="p-6 mb-6">
        <div class="flex justify-between items-center mb-4">
          <div class="text-lg md:text-xl font-bold text-dark">
            <span>Evaluando: </span>
            <span class="text-coral"><%= @category.name %></span>
          </div>
        </div>

        <!-- Category progress indicator -->
        <div class="flex justify-center text-sm font-semibold text-medium mb-6">
          <span>Cansancio <%= @current_category_position %> de 7</span>
        </div>


      </div>

      <%= form_with url: cuestionario_category_path(@category), method: :post, local: true, class: "space-y-6" do |form| %>
        <!-- Category section -->
        <div class="category-section mb-8" 
             data-controller="question-navigator" 
             data-question-navigator-total-value="<%= @category.questions.count %>"
             data-question-navigator-current-value="0">
          
          <div class="bg-green-light/10 border-2 border-green-light p-6 rounded-3xl mb-6 text-center shadow-md category-description">
            <h3 class="text-2xl md:text-3xl font-bold mb-3 text-green-dark"><%= @category.name %></h3>
            <p class="text-sm md:text-base text-medium mb-4">
              <%= @category.description %>
            </p>
            <p class="text-base md:text-lg text-green-dark font-medium">
              Respond√© a las siguientes preguntas en una escala del 0 al 3:
            </p>
            <div class="text-sm text-green-dark mt-2">
              <div>0: Nunca</div>
              <div>1: A veces</div>
              <div>2: Frecuentemente</div>
              <div>3: Siempre</div>
            </div>
          </div>

          <!-- Progress indicator -->
          <div class="text-center mb-6">
            <div class="inline-block bg-coral text-white px-4 py-2 rounded-full font-medium text-sm shadow-md"
                 data-question-navigator-target="counter">
              Pregunta 1 de <%= @category.questions.count %>
            </div>
          </div>

          <!-- Questions -->
          <% @category.questions.each_with_index do |question, index| %>
            <div class="question-item bg-warm-white border-2 border-cream rounded-3xl p-6 mb-4 shadow-md hover:shadow-xl hover:border-coral-light transition-all duration-300 relative <%= 'hidden' if index > 0 %>"
                 data-question-navigator-target="question">
              <div class="absolute -top-3 left-6 bg-coral text-white w-8 h-8 rounded-full flex items-center justify-center font-bold text-sm shadow-md">
                <%= index + 1 %>
              </div>

              <div class="text-lg md:text-xl mb-6 text-dark leading-relaxed mt-2">
                <%= question.text %>
              </div>

              <!-- Likert scale options -->
              <div class="flex flex-wrap gap-4 justify-center">
                <div class="flex items-center gap-3">
                  <%= radio_button_tag "answers[#{question.id}]", 0, @answers[question.id.to_s] == 0, 
                      class: "flower-radio", 
                      id: "question_#{question.id}_0",
                      data: { action: "change->question-navigator#answerSelected" } %>
                  <%= label_tag "question_#{question.id}_0", "0: Nunca", 
                      class: "text-sm md:text-base text-medium cursor-pointer select-none px-3 py-2 rounded-lg hover:bg-green-light/20 transition-colors" %>
                </div>

                <div class="flex items-center gap-3">
                  <%= radio_button_tag "answers[#{question.id}]", 1, @answers[question.id.to_s] == 1, 
                      class: "flower-radio", 
                      id: "question_#{question.id}_1",
                      data: { action: "change->question-navigator#answerSelected" } %>
                  <%= label_tag "question_#{question.id}_1", "1: A veces", 
                      class: "text-sm md:text-base text-medium cursor-pointer select-none px-3 py-2 rounded-lg hover:bg-green-light/20 transition-colors" %>
                </div>

                <div class="flex items-center gap-3">
                  <%= radio_button_tag "answers[#{question.id}]", 2, @answers[question.id.to_s] == 2, 
                      class: "flower-radio", 
                      id: "question_#{question.id}_2",
                      data: { action: "change->question-navigator#answerSelected" } %>
                  <%= label_tag "question_#{question.id}_2", "2: Frecuentemente", 
                      class: "text-sm md:text-base text-medium cursor-pointer select-none px-3 py-2 rounded-lg hover:bg-green-light/20 transition-colors" %>
                </div>

                <div class="flex items-center gap-3">
                  <%= radio_button_tag "answers[#{question.id}]", 3, @answers[question.id.to_s] == 3, 
                      class: "flower-radio", 
                      id: "question_#{question.id}_3",
                      data: { action: "change->question-navigator#answerSelected" } %>
                  <%= label_tag "question_#{question.id}_3", "3: Siempre", 
                      class: "text-sm md:text-base text-medium cursor-pointer select-none px-3 py-2 rounded-lg hover:bg-green-light/20 transition-colors" %>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Navigation buttons between questions -->
          <div class="flex justify-between items-center mt-6 mb-6">
            <button type="button" 
                    class="invisible px-4 py-2 bg-green-light text-white rounded-lg font-medium text-sm hover:bg-green transition-colors duration-200 shadow-md"
                    data-question-navigator-target="prevButton"
                    data-action="click->question-navigator#previous">
              ‚Üê Pregunta Anterior
            </button>
            
            <button type="button" 
                    class="px-4 py-2 bg-coral text-white rounded-lg font-medium text-sm hover:bg-coral/90 transition-colors duration-200 shadow-md"
                    data-question-navigator-target="nextButton"
                    data-action="click->question-navigator#next">
              Siguiente Pregunta ‚Üí
            </button>
          </div>

          <!-- Global progress bar -->
          <div class="bg-cream rounded-full p-2 mb-4">
            <div class="flex justify-center items-center space-x-4">
              <% @categories.each_with_index do |category, index| %>
                <% 
                  position = index + 1
                  is_current = position == @current_category_position
                  is_completed = position < @current_category_position
                  short_name = category.name.gsub("Cansancio ", "")
                %>
                <div class="flex flex-col items-center">
                  <!-- Progress dot -->
                  <div class="w-4 h-4 rounded-full mb-2 transition-all duration-300 <%= is_completed ? 'bg-green shadow-lg' : (is_current ? 'bg-coral shadow-lg animate-pulse' : 'bg-gray-300') %>"></div>
                  
                  <!-- Category label -->
                  <div class="text-xs text-center font-medium <%= is_current ? 'text-coral' : (is_completed ? 'text-green-dark' : 'text-gray-500') %>">
                    <div class="hidden sm:block"><%= short_name %></div>
                    <div class="sm:hidden"><%= short_name.split(' ').first %></div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Navigation buttons -->
        <div class="flex justify-between items-center mt-8 pt-6 border-t border-cream">
          <% if @previous_category %>
            <%= link_to cuestionario_category_path(@previous_category.identifier), 
                class: "px-6 py-3 bg-green-light text-white rounded-xl font-medium text-sm hover:bg-green transition-colors duration-200 shadow-md" do %>
              ‚Üê Cansancio Anterior
            <% end %>
          <% else %>
            <div></div>
          <% end %>
          
          <%= form.submit @next_category ? "Siguiente Cansancio ‚Üí" : "Ver Resultados ‚Üí", 
              class: "px-6 py-3 bg-coral text-white rounded-xl font-medium text-sm hover:bg-coral/90 transition-colors duration-200 shadow-md" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
